/* components/cell/index.wxss */
@import "../common/leui.wxss";
.cell {
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  margin-left: 42rpx;
  border-bottom: 1px solid rgba(238, 238, 238, 1);
}



.cell .left {
  width: 60%;
  justify-content: left;
}

.cell .icon {
  width: 58rpx;
  height: 58rpx;
  font-size:40rpx; 
}
.cell .icon .le-icon{
  vertical-align: -5rpx;
}
.cell .icon image {
  width: 58rpx;
  height: 58rpx;
}

.cell .name {
  font-size: 16px;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  padding-left: 21rpx;
}

.cell .arrow {
  font-size: 13px;
  font-weight: 500;
  color: rgba(179, 171, 171, 1);
  align-content: right;
  justify-content: flex-end;
  display: flex;
  float: right;
  padding-right: 30rpx;
}

.cell .arrow .gold {
  font-size: 14px;
  font-weight: 500;
  color: rgba(254, 173, 32, 1);
}

.cell .arrow .arrow-icon {
  width: 12rpx;
  height: 22rpx;
  padding-left: 15rpx;
}

.cell .arrow .arrow-gold {
  width: 30rpx;
  height: 30rpx;
  padding-right: 9rpx;
}