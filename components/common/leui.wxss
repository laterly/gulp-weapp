/* ==================
        初始化
 ==================== */

page {
  font-size: 14px;
  color: #333;
  font-family: Helvetica Neue, Helvetica, sans-serif;
}
.flex {
    display: flex
}

.flex1 {
    box-flex: 1;
    flex: 1
}

.flex2 {
    box-flex: 2;
    flex: 2
}

.flex3 {
    box-flex: 3;
    flex: 3
}

.flex-center {
    justify-content: center;
    align-items: center;
    display: flex
}

.flex-row {
    display: flex;
    flex-flow: row wrap
}

.flex-column {
    display: flex;
    flex-direction: column
}

.text-elli {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis
}

.clear {
    clear: both;
    height: 0;
    overflow: hidden
}

.clearfix {
    zoom:1;clear: both
}

.clearfix:after {
    display: block;
    height: 0;
    overflow: hidden;
    content: " ";
    visibility: hidden;
    clear: both
}

.fl {
    float: left
}

.fr {
    float: right
}

.img-responsive {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.rel {
    position: relative
}
.abs {
    position: absolute
}

.height100{
  height: 100%;
}